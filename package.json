{
  "name": "microsoft-smtp-oauth2-proxy",
  "description": "A simple SMTP server with basic authentication that proxies to Microsoft SMTP server with OAuth2 authentication",
  "author": "Oldřich Jedlička",
  "license": "BSD-2-Clause",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=env.development --env-file=env --enable-source-maps --import=extensionless/register --import=@swc-node/register/esm-register ./server/server.ts",
    "test": "node --import=extensionless/register --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --colors --verbose --detectOpenHandles --workerThreads",
    "build": "node --import=extensionless/register --import=@swc-node/register/esm-register ./build.ts",
    "analyze": "node --env-file=env.analyze --import=extensionless/register --import=@swc-node/register/esm-register ./build.ts",
    "prod": "node --env-file=./env --import=extensionless/register ./server/server.js",
    "lint": "next lint"
  },
  "dependencies": {
    "@azure/msal-node": "^2.16.2",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "clsx": "^2.1.1",
    "connect": "^3.7.0",
    "cookies-next": "^5.0.2",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "dirty-json": "^0.9.2",
    "email-addresses": "^5.0.0",
    "express": "^5.0.1",
    "extensionless": "^1.9.9",
    "geist": "^1.3.1",
    "html-react-parser": "^5.2.2",
    "ipaddr.js": "^2.2.0",
    "iron-session": "^8.0.4",
    "is-base64": "^1.1.0",
    "localenv": "^0.2.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.469.0",
    "marked": "^15.0.5",
    "next": "15.1.3",
    "nocache": "^4.0.0",
    "node-cache": "^5.1.2",
    "node-html-parser": "^7.0.1",
    "p-limit": "^6.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hot-toast": "^2.5.1",
    "smtp-server": "^3.13.6",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "striptags": "^3.2.0",
    "throat": "^6.0.2",
    "yn": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@next/bundle-analyzer": "^15.1.4",
    "@swc-node/jest": "^1.8.12",
    "@swc-node/register": "^1.10.9",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/is-base64": "^1.1.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/smtp-server": "^3.5.10",
    "@vercel/nft": "^0.29.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.3",
    "jest": "^29.7.0",
    "postcss": "^8",
    "selfsigned": "^2.4.1",
    "tailwindcss": "^4.0.0",
    "tiny-typed-emitter": "^2.1.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  }
}
